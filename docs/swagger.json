  "paths": {
    "/auth/signup": {
      "post": {
        "summary": "SignUp a new user",
        "operationId": "registerUser",
        "tags": [
          "Auth"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "email",
                  "password"
                ],
                "properties": {
                  "email": {
                    "description": "User's email",
                    "type": "string",
                    "example": "google@gmail.com"
                  },
                  "password": {
                    "description": "User's password",
                    "type": "string",
                    "example": "A213warl"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User successfully signup",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "type": "object",
                      "properties": {
                        "email": {
                          "type": "string"
                        },
                        "gender": {
                          "type": "string",
                          "example": "woman"
                        },
                        "weight": {
                          "type": "number",
                          "example": 0
                        },
                        "activeTimeSports": {
                          "type": "number",
                          "example": 0
                        },
                        "waterDrink": {
                          "type": "number",
                          "example": 1.8
                        },
                        "token": {
                          "type": "string",
                          "example": ""
                        },
                        "tempToken": {
                          "type": "string",
                          "example": ""
                        },
                        "avatarUrl": {
                          "type": "string",
                          "example": ""
                        },
                        "googleId": {
                          "type": "string",
                          "example": ""
                        },
                        "verify": {
                          "type": "boolean",
                          "example": false
                        },
                        "verificationToken": {
                          "type": "string",
                          "example": ""
                        },
                        "_id": {
                          "type": "string",
                          "example": "66995048b456e6b3c39d3599"
                        },
                        "createdAt": {
                          "type": "string",
                          "example": "2024-07-18T17:26:32.656Z"
                        },
                        "updatedAt": {
                          "type": "string",
                          "example": "2024-07-18T17:26:32.656Z"
                        },
                        "message": {
                          "type": "string",
                          "example": "Successfully signup user!"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400"
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    },
    "/auth/signin": {
      "post": {
        "summary": "Log in to get access token",
        "operationId": "logIn",
        "tags": [
          "Auth"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "email",
                  "password"
                ],
                "properties": {
                  "email": {
                    "description": "User's email",
                    "type": "string",
                    "example": "google@gmail.com"
                  },
                  "password": {
                    "description": "User's password",
                    "type": "string",
                    "example": "A213warl"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "SignIn successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully signin in an user!"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "accessToken": {
                          "type": "string",
                          "example": "wVXKhF1+nQEKIlQOPCACDzL4F/pJ5xa8JTge8Fes"
                        },
                        "refreshToken": {
                          "type": "string",
                          "example": "2dGpRZkR58seuCbSMPdBYI2DLdOCcf+GN8FLNGki"
                        },
                        "userId": {
                          "type": "string",
                          "example": "6693dd1c4693614757d726e0"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400"
          },
          "404": {
            "$ref": "#/components/responses/404"
          }
        }
      }
    },
    "/auth/refresh": {
      "post": {
        "summary": "Refresh access token",
        "operationId": "refreshAccessToken",
        "tags": [
          "Auth"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "email"
                ],
                "properties": {
                  "email": {
                    "description": "User's email",
                    "type": "string",
                    "example": "google@gmail.com"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully refreshed tokens!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Successfully refreshed tokens!"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "accessToken": {
                          "type": "string",
                          "description": "access token",
                          "example": "1maDX6ctB27mAOXwj5dJndUX3rUTW/DBOpeSEuI"
                        },
                        "refreshToken": {
                          "type": "string",
                          "description": "refresh token",
                          "example": "1maDX6ctB27mAOXwj5dJndUX3rUTW/DBOpeSEuIi"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400"
          },
          "404": {
            "$ref": "#/components/responses/404"
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "summary": "Logout the current user",
        "operationId": "logOut",
        "tags": [
          "Auth"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "description": "access token",
            "required": true,
            "schema": {
              "type": "string",
              "example": "eyJ1c2VybmFtZSI6ImFkbWluIiwicm9sZSI6ImFkbWluIiwiaWF0IjoxNjYyMTY0ODU4LCJleHAiOjE2NjIyNjQ4NTg4fQ"
            }
          },
          {
            "name": "id",
            "in": "query",
            "description": "UserId",
            "required": true,
            "schema": {
              "type": "string",
              "example": "66996a0e1a65dd13c4186b31"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User logged out successfully"
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    },
    "/users/current": {
      "get": {
        "summary": "Get current user information",
        "operationId": "getCurrentUser",
        "tags": [
          "Users"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Current user information retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "example": "507f1f77bcf86cd799439011"
                    },
                    "name": {
                      "type": "string",
                      "example": "John Doe"
                    },
                    "email": {
                      "type": "string"
                    },
                    "gender": {
                      "type": "string",
                      "enum": [
                        "woman",
                        "man"
                      ],
                      "example": "undefined"
                    },
                    "weight": {
                      "type": "number",
                      "example": 70
                    },
                    "activeTimeSports": {
                      "type": "number",
                      "example": 5
                    },
                    "waterDrink": {
                      "type": "number",
                      "example": 1.8
                    },
                    "avatarURL": {
                      "type": "string",
                      "example": "https://res.cloudinary.com/uqwgdu/image/upload/image.png"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "500": {
            "$ref": "#/components/responses/500"
          }
        }
      }
    },
